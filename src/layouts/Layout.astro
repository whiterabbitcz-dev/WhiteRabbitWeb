---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "White Rabbit - Kreativita a efektivita bez bull****" } = Astro.props;
---

<!doctype html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-32.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta property="og:image" content="/og-image.jpg" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
    
    <!-- Netlify Identity Widget -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    
    <title>{title}</title>
  </head>
  <body class="bg-dark text-white font-sans">
    <!-- Animated Aurora Background -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
      <!-- Purple blob -->
      <div class="absolute top-0 -left-1/4 w-[300px] h-[300px] md:w-[600px] md:h-[600px] bg-purple-600 rounded-full blur-3xl opacity-30 animate-blob"></div>
      
      <!-- Blue blob -->
      <div class="absolute bottom-0 -right-1/4 w-[300px] h-[300px] md:w-[600px] md:h-[600px] bg-blue-600 rounded-full blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
      
      <!-- Pink accent blob -->
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[250px] h-[250px] md:w-[500px] md:h-[500px] bg-pink-600 rounded-full blur-3xl opacity-20 animate-blob animation-delay-4000"></div>
    </div>
    
    <slot />
    
    <script is:inline>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    background-color: #050505;
  }
  
  html {
    scroll-behavior: smooth;
  }
  
  /* Aurora blob animation */
  @keyframes blob {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(100px, -150px) scale(1.15);
    }
    50% {
      transform: translate(-120px, 100px) scale(0.85);
    }
    75% {
      transform: translate(150px, 80px) scale(1.1);
    }
  }
  
  .animate-blob {
    animation: blob 15s ease-in-out infinite;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>

